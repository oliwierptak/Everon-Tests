<phpunit
    bootstrap="bootstrap_mvc.php"
    colors="true"
    stopOnError="true"
    stopOnFailure="true"
    stopOnIncomplete="true"
    stopOnSkipped="true"
    debug="true"
    >
	<testsuites>
		<testsuite name="unit">
			<directory>unit</directory>
		</testsuite>
	</testsuites>
    <logging>
        <log type="coverage-html"
             target="coverage"
             charset="UTF-8"
             yui="true"
             highlight="true"
             lowUpperBound="35"
             highLowerBound="70"/>
        <!--log type="coverage-html" target="coverage/" title="FlickrStats"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        < log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="build/logs/testdox.html"/ -->
    </logging>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/everon/unit</directory>
            <file>RequestTest.php</file>
            <file>RouterTest.php</file>
        </testsuite>
    </testsuites>

</phpunit>
